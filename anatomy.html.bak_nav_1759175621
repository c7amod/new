  <script>
    // Page enter
    document.addEventListener('DOMContentLoaded', () => {
      requestAnimationFrame(() => {
        document.body.classList.add('page-enter-active');
        document.body.classList.remove('page-enter');
      });
    });
    // Smooth transition on nav links
    document.querySelectorAll('a[href$=".html"]').forEach(a => {
      a.addEventListener('click', (e) => {
        const href = a.getAttribute('href');
        if (!href || href.startsWith('#') || a.target === '_blank') return;
        e.preventDefault();
        document.body.classList.add('page-enter');
        document.body.classList.remove('page-enter-active');
        setTimeout(() => { window.location.href = href; }, 180);
      });
    });

    // Scroll reveal
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('reveal-active');
          observer.unobserve(entry.target);
        }
      });
    }, { root: null, threshold: 0, rootMargin: '0px 0px -5% 0px' });
    const revealEls = Array.from(document.querySelectorAll('.reveal-on-scroll'));
    revealEls.forEach(el => observer.observe(el));

    // Player + lectures interactions (mirrors physiology)
    const player = document.getElementById('player');
    const playerWrap = document.getElementById('playerWrap');
    const downloadBtn = document.getElementById('downloadBtn');
    const providerSelect = document.getElementById('providerSelect');
    let currentVideoId = null;
    const lecturesUl = document.getElementById('lectures');

    function selectLecture(li) {
      document.querySelectorAll('#lectures li').forEach(x => x.classList.remove('active'));
      li.classList.add('active');
      const id = li.getAttribute('data-video');
      currentVideoId = id;
      if (playerWrap.classList.contains('hidden')) {
        playerWrap.classList.remove('hidden');
      }
      lecturesUl.classList.add('compact');
      lecturesUl.classList.add('sm:grid-cols-3', 'lg:grid-cols-4');
      // Smooth scroll to player (account for sticky header)
      try {
        const header = document.querySelector('header');
        const offset = (header && header.offsetHeight) ? header.offsetHeight + 12 : 76;
        const rect = playerWrap.getBoundingClientRect();
        const y = rect.top + window.pageYOffset - offset;
        window.scrollTo({ top: y, behavior: 'smooth' });
      } catch (_) {}
      player.src = `https://www.youtube.com/embed/${id}`;
      if (downloadBtn) {
        downloadBtn.onclick = () => {
          if (!currentVideoId) return;
          const provider = providerSelect ? providerSelect.value : 'savefrom';
          let url = `https://youtu.be/${currentVideoId}`;
          switch (provider) {
            case 'savefrom':
              url = `https://en.savefrom.net/1-youtube-video-downloader/?url=https://youtu.be/${currentVideoId}`;
              break;
            case 'ssyoutube':
              url = `https://ssyoutube.com/watch?v=${currentVideoId}`;
              break;
          }
          window.open(url, '_blank');
        };
      }
    }

    document.querySelectorAll('#lectures li').forEach(li => {
      li.addEventListener('click', () => selectLecture(li));
    });
  </script>
